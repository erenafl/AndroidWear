<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}">

    <Button
        android:id="@+id/notificationOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesaj Gönder" />
    <Button
        android:id="@+id/notificationTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detaylı Mesaj Gönder" />

    <Button
        android:id="@+id/notificationThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps" />

    <Button
        android:id="@+id/notificationFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sesli Komut" />
</LinearLayout>
